<!DOCTYPE html>
<html lang="">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Title Page</title>

    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.3/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>

<body>

    <div class="container">

        <%- include layout/nav %>

        <div class="row"    style="margin:30px;">
            
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <a href="admin/post/new" class="btn btn-success pull-right">Add new Post</a>
            </div>
            
        </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Posts
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Content</th>
                                    <th>Author</th>
                                    <th>Create time</th>
                                    <th>Update time</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%if(data && data.posts){%>
                                    <%for(var i = 0;i < data.posts.length; i++){%>
                                        <tr>
                                            <td>
                                                <%= data.posts[i].id%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].title%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].content%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].auther%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].created_at%>
                                            </td>
                                            <td>
                                                <%= data.posts[i].updated_at%>
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" href="/admin/post/edit/<%= data.posts[i].id%>">Edit</a>
                                                <!-- <a class="btn btn-danger" href="">Delete</a> -->
                                                <button class="btn btn-danger post_delete" post_id="<%= data.posts[i].id%>">Delete</button>
                                            </td>
                                        </tr>
                                        <%}%>
                                            <%}%>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
    </div>
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/static/js/post.js"></script>
</body>

</html>